{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="m-2">

        {{ include('composant/flash_messages.html.twig') }}

    </div>

    <section class="features-icons bg-light text-center">

        <div class="">

            <h1>Contact</h1>

            <div class="row">

                <div class="col-md-12">

                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">

                        {{ form_start(formContact) }}

                        <div class="form-group m-5">

                            {{ form_errors(formContact.email) }}

                            {{ form_widget(formContact.email, {
                                attr: {
                                    'placeholder': 'email'
                                },
                            }) }}

                        </div>

                        <div class="form-group m-5">
                            {{ form_widget(formContact.name, {
                                attr: {
                                    'placeholder': 'name'
                                },
                            }) }}
                        </div>

                        <div class="form-group m-5">

                            {{ form_widget(formContact.description, {
                                attr: {
                                    'placeholder': 'description'
                                },
                            }) }}

                        </div>

                        <div class="form-group m-5">

                            <button type="submit" class="btn btn-secondary btn-block">Envoyer</button>

                        </div>

                        {{ form_end(formContact) }}
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
