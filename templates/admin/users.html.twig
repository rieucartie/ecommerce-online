{% extends 'admin/layout.html.twig' %}

{% block title %} Utilisateur {% endblock %}

{% block body %}

    <div class="container">

        <div class="plusbas2">

            <h2>Liste des utilisateurs</h2>

            <hr>
        </div>

        <div class="row">

            <table class="tables" id="datatable">

                <thead>

                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>

                </thead>

                <tbody>

                {% for user in users %}

                    <tr>

                        <td>{{ user.email }}</td>

                        <td>

                            {% for role in user.roles %}

                                {% if role=="ROLE_USER" %}

                                    Utilisateur

                                {% elseif role=="ROLE_ADMIN" %}

                                    Administrateur

                                {% endif %}

                            {% endfor %}

                        </td>

                        <td>
                            <a href="{{ path('admin_modifierutilisateur', {'id': user.id }) }}" class="btn btn-dark">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

