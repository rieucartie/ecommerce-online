{% extends 'admin/layout.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

    <div class="container2">

        <h2> Liste des categories</h2>

        <hr>

        {% if(pagination.data|length >0) %}

            <div class="plusbas">
                <a class="btn btn-warning" href="{{ path('category_new') }}">Creer nouvelle categorie</a>
            </div>

            <table class="table" id="datatable">

                <thead>

                <tr>
                    <th>Nom</th>
                    <th>Modifier</th>
                </tr>

                </thead>

                <tbody>

                {% for category in categories %}
                    <tr>

                        <td>{{ category.name }}</td>

                        <td>
                            <a href="{{ path('category_edit', {'id': category.id}) }}"
                               class="btn btn-success">Modifier</a>
                        </td>

                    </tr>
                {% else %}

                    <tr>
                        <td colspan="3">Pas d'enregistrement trouvé</td>
                    </tr>

                {% endfor %}

                </tbody>

            </table>

            {{ pagination.display() }}

        {% else %}

            <div class="plusbas2">
                Pas d'enregistrement trouvé
            </div>

        {% endif %}

    </div>

{% endblock %}
