{% extends 'admin/layout.html.twig' %}

{% block title %} Catégorie {% endblock %}

{% block body %}

    <div class="container2">

        <h1>Catégorie</h1>

        <table class="table">
            <tbody>

            <tr>
                <th>Nom</th>

                <td>{{ category.name }}</td>
            </tr>

            </tbody>

        </table>

        <a class="btn btn-light" href="{{ path('category_index') }}">Retour à la liste</a>

        <a class="btn btn-success" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

        <div class="plusbas">

            {{ include('admin/category/_delete_form.html.twig') }}

        </div>
    </div>
{% endblock %}
